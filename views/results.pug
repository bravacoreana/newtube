extends layouts/main
include mixins/videoBlock

block content
    .results__header
        h2 Searching results for: #{searchQuery}
    .search__videos
        each video in videos
            +videoBlock({
                title: video.title,
                thumbnail:  video.thumbnail,
                avatar: video.creator.avatar,
                name: video.creator.name,
                views: video.views
            })
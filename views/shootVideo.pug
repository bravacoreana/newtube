extends layouts/main

block content
    h1 SHOOTING VIDEO
    .form-container
        form(action=routes.videoUpload, method="post" enctype="multipart/form-data")
            lable(for="Thumbnail") Choose a thumbnail
            input(type="file", id="thumbnailFile", name="thumbnailFile")
            label(for="Video") Choose a video         
            input(type="file", id="videoFile", name="videoFile")
            input(type="title", name="title", placeholder="Title")
            textarea(name="description", placeholder="Description")
            input(type="submit", value="Upload")
        a(href=routes.video+routes.edit) Edit Video
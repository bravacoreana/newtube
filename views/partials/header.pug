header.header
    .header__container
        .header__column
            .header-sidebar
                i.fas.fa-bars#sidebarBtn-js
            a(href=routes.home)
                .header-logo
                    i.fab.fa-youtube      
                    span #{siteName}
                    span.countryCode#countryCode-js
        .header__column
            form(action=routes.results, method="get")
                input(type="text", placeholder="Search", name="search_query", autocomplete="off")
                button(type="submit")
                    i.fas.fa-search
            a(href="#")
                i.fas.fa-microphone
        .header__column
            a(href=routes.video+routes.shootVideo)
                i.fas.fa-video
            a(href="#")
                i.fas.fa-th
            a(href="#")
                i.fas.fa-bell
            ul.dropdown
                li.dropbtn#dropdown-js
                    i.fas.fa-user
                if !loggedUser
                    ul.dropdown-content#dropdownContent-js
                        a(href=routes.signUp)
                            li
                                i.fas.fa-user
                                span  Sign Up
                        a(href=routes.signIn)
                            li
                                i.fas.fa-user
                                span  Sign In
                        a(href="#")
                            li
                                i.fas.fa-adjust
                                span  Light Mode
                else
                    ul.dropdown-content#dropdownContent-js
                        a(href=routes.userDetail)
                            li
                                span NAME
                        a(href=routes.videos+routes.upload)
                            li
                                i.fas.fa-film
                                span  Upload
                        a(href=routes.myProfile)
                            li
                                i.fas.fa-user
                                span  Profile
                        a(href="#")
                            li
                                i.fas.fa-adjust
                                span  Dark Mode
                        a(href=routes.logout)
                            li
                                i.fas.fa-user
                                span  Sign Out

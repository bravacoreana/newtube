extends layouts/main

block content
    .form-wrapper#videoContainer-js
        .form-container#videoWrap-js
            form(action=routes.users+routes.changePassword, method="post")
                input(type="password", name="oldPassword", placeholder="Current Password")
                input(type="password", name="newPassword", placeholder="New Password")
                input(type="password", name="newPasswordVerify", placeholder="Verify New Password")
                if messages.error
                    +message({
                        type:'error',
                        text:messages.error
                })
                input(type="submit", value="Change Password")
